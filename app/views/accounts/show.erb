
<h3>Account: <%=@account.name%></h3>
<p>Balance: $<%=@account.balance%></p>

<form action="/accounts/<%=@account.id%>/new_transaction" method="post">

    <label>Choose Deposit or Withdrawl</label>
    <br/>
    <select name="transaction_type">
      <option id="deposit" value="deposit">Deposit</option>
      <option id="withdrawl" value="withdrawl">Withdrawl</option>
    </select>
    <input type="integer" name="transaction_amount" id="transaction_amount" placeholder="amount">
    <br/>
    <input type="submit" value="Create New Transaction">
  </form>

<br/>
