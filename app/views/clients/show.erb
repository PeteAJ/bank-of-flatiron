<h1>Hello <%=@client.name%></h1><h1>Email: <%=@client.email%></h1>
<br/>
<h2>Here are Your Account Summaries:</h2>
<ul>
  <%current_client.accounts.each do |t|%>
  <h3><%=t.name%></h3>
  <p><%=t.balance%></p>
  <%end%>
</ul>
<br/>

<form action="/accounts" method="POST">

  <label>Choose Deposit or Withdrawl</label>
  <br/>
  <label>Deposit</label>
  <input type="checkbox" name="deposit" id="deposit">
  <input type="integer" name="deposit_amount" id="amount" placeholder="amount">
  <br/>
  <label>Withdrawl</label>
  <input type="checkbox" name="withdrawl" id="withdrawl">
  <input type="integer" name="withdrawl_amount" id="amount" placeholder="amount">
  <br/>
  <input type="submit" value="Create New Transaction">
</form>






<br/>
<br/>
<a href="/accounts/new">Create an Additional Account</a>
<br/>
<a href="/accounts/<%=@client.id%>/new_transaction">Transfer Between Accounts</a>
<br/>
<a href="/clients/<%=@client.id%>/edit">Edit Your Contact Email</a>
